{
  "annotations": {
    "list": []
  },
  "description": "PeacePay Main Operations Dashboard",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "title": "Overview",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Active Users (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 1},
      "targets": [
        {
          "expr": "sum(increase(peacepay_user_logins_total[24h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "green", "value": 500}
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "textMode": "auto"
      }
    },
    {
      "id": 3,
      "title": "PeaceLinks Created (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 1},
      "targets": [
        {
          "expr": "sum(increase(peacepay_peacelinks_created_total[24h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "green", "value": 200}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Transaction Volume (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 1},
      "targets": [
        {
          "expr": "sum(increase(peacepay_transaction_amount_total[24h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyEGP",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Platform Revenue (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 1},
      "targets": [
        {
          "expr": "sum(increase(peacepay_platform_fees_total[24h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyEGP",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Pending Cashouts",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 1},
      "targets": [
        {
          "expr": "peacepay_cashouts_pending",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Open Disputes",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 1},
      "targets": [
        {
          "expr": "peacepay_disputes_open",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 20}
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "API & Performance",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 5}
    },
    {
      "id": 9,
      "title": "API Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "sum(rate(peacepay_http_requests_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right"}
      }
    },
    {
      "id": 10,
      "title": "API Response Time (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(peacepay_http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.5},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "sum(rate(peacepay_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(peacepay_http_requests_total[5m])) * 100",
          "legendFormat": "Error Rate %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "HTTP Status Codes",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14},
      "targets": [
        {
          "expr": "sum(increase(peacepay_http_requests_total[1h])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "pieType": "donut"
      }
    },
    {
      "id": 13,
      "title": "Database Query Time (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(peacepay_db_query_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 Query Time",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.1},
              {"color": "red", "value": 0.5}
            ]
          }
        }
      }
    },
    {
      "id": 14,
      "title": "PeaceLink Metrics",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 22}
    },
    {
      "id": 15,
      "title": "PeaceLink Status Distribution",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 23},
      "targets": [
        {
          "expr": "peacepay_peacelinks_by_status",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "pieType": "donut"
      }
    },
    {
      "id": 16,
      "title": "PeaceLink Completion Rate",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 23},
      "targets": [
        {
          "expr": "sum(peacepay_peacelinks_by_status{status=\"released\"}) / sum(peacepay_peacelinks_by_status{status=~\"released|cancelled|refunded\"}) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "green", "value": 90}
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 17,
      "title": "Average Completion Time",
      "type": "stat",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 23},
      "targets": [
        {
          "expr": "avg(peacepay_peacelink_completion_hours)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "h",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 48},
              {"color": "red", "value": 72}
            ]
          }
        }
      }
    },
    {
      "id": 18,
      "title": "Payment Gateways",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 31}
    },
    {
      "id": 19,
      "title": "Add Money by Method",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 32},
      "targets": [
        {
          "expr": "sum(increase(peacepay_add_money_total[24h])) by (method)",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 20,
      "title": "Payment Gateway Success Rate",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 32},
      "targets": [
        {
          "expr": "sum(increase(peacepay_payment_success_total[24h])) by (gateway) / sum(increase(peacepay_payment_attempts_total[24h])) by (gateway) * 100",
          "legendFormat": "{{gateway}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 90},
              {"color": "green", "value": 98}
            ]
          }
        }
      }
    },
    {
      "id": 21,
      "title": "Cashout Volume by Method",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 32},
      "targets": [
        {
          "expr": "sum(increase(peacepay_cashout_amount_total[1h])) by (method)",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyEGP"
        }
      }
    },
    {
      "id": 22,
      "title": "Infrastructure",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 40}
    },
    {
      "id": 23,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 41},
      "targets": [
        {
          "expr": "avg(rate(container_cpu_usage_seconds_total{namespace=\"peacepay\"}[5m])) by (pod) * 100",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 24,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 41},
      "targets": [
        {
          "expr": "avg(container_memory_usage_bytes{namespace=\"peacepay\"}) by (pod) / 1024 / 1024",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes"
        }
      }
    },
    {
      "id": 25,
      "title": "Redis Operations/sec",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 41},
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "Commands/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 26,
      "title": "Queue Depth",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 41},
      "targets": [
        {
          "expr": "peacepay_queue_size",
          "legendFormat": "{{queue}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "tags": ["peacepay", "production"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {"selected": true, "text": "Prometheus", "value": "Prometheus"}
      }
    ]
  },
  "time": {"from": "now-24h", "to": "now"},
  "timepicker": {},
  "timezone": "Africa/Cairo",
  "title": "PeacePay Operations Dashboard",
  "uid": "peacepay-ops",
  "version": 1
}
